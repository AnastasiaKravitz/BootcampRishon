<!DOCTYPE html>
<html lang="en">
    <%- include('./partials/head') %>
    <body>
        <%- include('./partials/navbar', {currentPage: 'signup'}) %>
        <div class="container">
            <h1 class="text-center">Join the <City> Sports Website</h1>
            <form id="signup-form">
                <div class="form-group">
                    <label for="username">User Name:</label>
                    <input type="text" id="username" name="username" class="form-control" required>
                </div>
                <div class="form-group">
                    <label for="email">Email:</label>
                    <input type="email" id="email" name="email" class="form-control" required>
                </div>
                <div class="form-group">
                    <label for="password">Password:</label>
                    <input type="password" id="password" name="password" class="form-control" required>
                </div>
                <button type="submit" class="btn btn-primary">Next</button>
            </form>
            <div class="text-center mt-3"> <!-- Added margin top for spacing -->
                <p>Already have an account? <a href="/login" class="btn btn-link">Login</a></p>
            </div>
        </div>
        <script src="/path/to/your/javascript.js"></script> <!-- Link to your JS file -->
    </body>
</html>
